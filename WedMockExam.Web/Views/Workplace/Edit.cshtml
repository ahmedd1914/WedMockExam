@model WedMockExam.Web.Models.ViewModels.Workplace.WorkplaceViewModel
@{
    ViewData["Title"] = "Edit Workplace";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-pencil-square me-2"></i>Edit Workplace
                        </h5>
                        <a asp-action="Index" class="btn btn-light btn-sm">
                            <i class="bi bi-arrow-left me-1"></i>Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger shadow-sm mb-4"></div>
                        <input type="hidden" asp-for="WorkplaceId" />

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Floor" class="form-control" placeholder="Floor" />
                                    <label asp-for="Floor">
                                        <i class="bi bi-building me-1"></i>Floor
                                    </label>
                                    <span asp-validation-for="Floor" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Zone" class="form-control" placeholder="Zone" />
                                    <label asp-for="Zone">
                                        <i class="bi bi-grid me-1"></i>Zone
                                    </label>
                                    <span asp-validation-for="Zone" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-4">
                            <div class="card-header bg-light">
                                <h6 class="mb-0">
                                    <i class="bi bi-tools me-2"></i>Equipment
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="form-check form-switch">
                                            <input asp-for="HasMonitor" class="form-check-input" type="checkbox" />
                                            <label asp-for="HasMonitor" class="form-check-label">
                                                <i class="bi bi-display me-1"></i>Monitor
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-check form-switch">
                                            <input asp-for="HasDocking" class="form-check-input" type="checkbox" />
                                            <label asp-for="HasDocking" class="form-check-label">
                                                <i class="bi bi-hdd-network me-1"></i>Docking
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-check form-switch">
                                            <input asp-for="HasWindow" class="form-check-input" type="checkbox" />
                                            <label asp-for="HasWindow" class="form-check-label">
                                                <i class="bi bi-window me-1"></i>Window
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-check form-switch">
                                            <input asp-for="HasPrinter" class="form-check-input" type="checkbox" />
                                            <label asp-for="HasPrinter" class="form-check-label">
                                                <i class="bi bi-printer me-1"></i>Printer
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-save me-2"></i>Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 