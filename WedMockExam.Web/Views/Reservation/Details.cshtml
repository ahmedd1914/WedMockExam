@model WedMockExam.Web.Models.ViewModels.Reservation.ReservationViewModel
@{
    ViewData["Title"] = "Reservation Details";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-info-circle me-2"></i>Reservation Details
                        </h5>
                        <a asp-action="Index" class="btn btn-light btn-sm">
                            <i class="bi bi-arrow-left me-1"></i>Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <!-- Reservation Information -->
                        <div class="col-md-6">
                            <div class="card h-100 border-0 bg-light">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-3 text-muted">
                                        <i class="bi bi-calendar-check me-2"></i>Reservation Information
                                    </h6>
                                    <dl class="row mb-0">
                                        <dt class="col-sm-4">ID</dt>
                                        <dd class="col-sm-8">@Model.ReservationId</dd>

                                        <dt class="col-sm-4">Date</dt>
                                        <dd class="col-sm-8">@Model.ReservationDate.ToString("d")</dd>

                                        <dt class="col-sm-4">Type</dt>
                                        <dd class="col-sm-8">
                                            @if (Model.IsQuickReservation)
                                            {
                                                <span class="badge bg-warning">
                                                    <i class="bi bi-lightning me-1"></i>Quick
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-info">
                                                    <i class="bi bi-calendar3 me-1"></i>Regular
                                                </span>
                                            }
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <!-- User Information -->
                        <div class="col-md-6">
                            <div class="card h-100 border-0 bg-light">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-3 text-muted">
                                        <i class="bi bi-person me-2"></i>User Information
                                    </h6>
                                    <dl class="row mb-0">
                                        <dt class="col-sm-4">User ID</dt>
                                        <dd class="col-sm-8">@Model.UserId</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <!-- Workplace Information -->
                        <div class="col-12">
                            <div class="card border-0 bg-light">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-3 text-muted">
                                        <i class="bi bi-building me-2"></i>Workplace Information
                                    </h6>
                                    <dl class="row mb-0">
                                        <dt class="col-sm-2">Workplace ID</dt>
                                        <dd class="col-sm-10">@Model.WorkplaceId</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <!-- Actions -->
                        @if (!Model.IsCancelled)
                        {
                            <div class="col-12">
                                <div class="d-grid">
                                    <form asp-action="Cancel" asp-route-id="@Model.ReservationId" method="post" 
                                          onsubmit="return confirm('Are you sure you want to cancel this reservation?');">
                                        <button type="submit" class="btn btn-danger">
                                            <i class="bi bi-x-circle me-2"></i>Cancel Reservation
                                        </button>
                                    </form>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 